{
	"name": "triberay-vue-purejs-portlet",
	"version": "1.0.0",
	"description": "Triberay Vue Purejs Portlet",
	"devDependencies": {
		"liferay-npm-bundler": "^2.6.2",
		"liferay-npm-build-support": "^2.6.2",
		"copy-webpack-plugin": "^4.5.4",
		"webpack": "^4.0.0",
		"webpack-cli": "^3.0.0",
		"webpack-dev-server": "^3.0.0",
		"babel-loader": "^7.0.0",
		"@babel/preset-env": "^7.4.3",
		"@babel/cli": "^7.4.3",
		"@vue/cli-plugin-babel": "^3.5.5",
		"@vue/cli-plugin-eslint": "^3.5.1",
		"@vue/cli-service": "^3.5.3",
		"vue-template-compiler": "^2.6.10",
		"node-sass": "^4.11.0",
		"sass-loader": "^7.1.0"
	},
	"dependencies": {
		"vue": "^2.0.0"
	},
	"scripts": {
		"dev": "vue-cli-service serve",
		"lint": "vue-cli-service lint",
		"build": "vue-cli-service build --formats commonjs --target lib --name index src/index.js && npm run copy-assets && liferay-npm-bundler",
		"copy-assets": "lnbs-copy-assets",
		"deploy": "npm run build && lnbs-deploy",
		"start": "lnbs-start"
	},
	"portlet": {
		"com.liferay.portlet.display-category": "category.triberayexamples",
		"com.liferay.portlet.header-portlet-css": "/css/styles.css",
		"com.liferay.portlet.instanceable": true,
		"javax.portlet.name": "triberay_vue_purejs_portlet",
		"javax.portlet.security-role-ref": "power-user,user",
		"javax.portlet.resource-bundle": "content.Language"
	},
	"main": "index.common.js"
}
